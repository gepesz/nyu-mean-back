extends layout
block content
    a(href="/things") Back to list
    h3
        if ( req.url === "/things/" + thing._id + "?error=1" )
            .alert.alert-danger Name cannot be empty
        else if ( req.url === "/things/" + thing._id + "?error=2" )
            .alert.alert-danger Duplicate name
    form.form(method="POST")
        .form-group
            label.control-label(for="thing_name") Name
            input.form-control#thing_name(name="name", value=thing.name)
        .form-group
            label
                input(name="active", type="checkbox", checked=thing.active)
                |&nbsp;Active
        .form-group
            button.btn.btn-primary(name="action", value="Update", type="submit")
                | Update
            button.btn.btn-danger(name="action", value="Delete", type="submit")
                | Delete
        